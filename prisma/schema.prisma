generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  image     String
  sizes     String[] // Ej. ["38", "39", "40"]
  colors    String[] // Ej. ["Negro", "Blanco"]
  stock     Int
  createdAt DateTime @default(now())
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  products  Json     // Lista de productos (ID, cantidad)
  total     Float
  status    String   // Ej. "pendiente", "enviado"
  createdAt DateTime @default(now())
}
